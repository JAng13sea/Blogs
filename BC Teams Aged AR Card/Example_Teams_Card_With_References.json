                            "color": "Accent",
                            "spacing": "ExtraLarge"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "\n\nÂ£@{string(formatNumber(body('agedAccountsReceivables')?['value']?[0]?['balanceDue'],'N'))}",
                            "wrap": true,
                            "weight": "Bolder",
                            "size": "Medium",
                            "color": "Accent",
                            "horizontalAlignment": "Right",
                            "spacing": "ExtraLarge"
                        }
                    ]
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
