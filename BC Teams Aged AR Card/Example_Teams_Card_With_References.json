{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4",
    "__comment": "Elements used",
    "body": [
        {
            "type": "Container"
        },
        {
            "type": "TextBlock",
            "text": "Aged Debtors Report",
            "wrap": true,
            "horizontalAlignment": "Center",
            "size": "ExtraLarge",
            "fontType": "Default",
